#!/bin/bash

if [ $# -ne 2 ]; then
	>&2 echo "Please specify a LLM CLI and an option."
	>&2 echo 'For example: `'$0' deepl-cli KO` or `'$0' gemini-cli "Translate to Korean"`'
	exit 1
fi

LT_CLI="$1"
LT_PARAM="$2"

if [ -z "$LT_SLEEP_SEC" ]; then
	LT_SLEEP_SEC=3
fi

case $(basename "$LT_CLI") in
	deepl-cli)
		[ -z "$LT_LINES" ] && LT_LINES=100
		;;
	gemini-cli)
		[ -z "$LT_LINES" ] && LT_LINES=50
		;;
	claude-cli)
		[ -z "$LT_LINES" ] && LT_LINES=10
		;;
	*)
		>&2 echo "'$LT_CLI' is not a supported LLM."
		exit 1
esac

function retry {
	>&2 echo "An error occurred, retrying..."
	sleep $LT_SLEEP_SEC
	"$LT_CLI" "$LT_PARAM" < $1
}

TEMPFILE=$(mktemp)
rm $TEMPFILE
split -l $LT_LINES - $TEMPFILE

for i in $TEMPFILE*; do
	"$LT_CLI" "$LT_PARAM" < $i

	# Retrying twice
	if [ $? -ne 0 ]; then
		retry $i
	fi
	if [ $? -ne 0 ]; then
		retry $i
	fi

	# Give up this part
	if [ $? -ne 0 ]; then
		>&2 echo -e "\033[31mFailed to process a part of the input. This is an unrecoverable error.\033[0m"
	fi

	sleep $LT_SLEEP_SEC
done

rm $TEMPFILE*
